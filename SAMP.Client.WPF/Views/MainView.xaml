<UserControl x:Class="SAMP.Client.WPF.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">   
    <StackPanel Height="350" Width="525">
        <TextBox x:Name="Name" Text="{Binding Username}" />
        <ListView x:Name="SelectServer" ItemsSource="{Binding Servers}" Height="150" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="100">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Name" HorizontalAlignment="Left"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Header="Hostname" DisplayMemberBinding="{Binding Hostname}" Width="50" />
                    <GridViewColumn Header="Port" DisplayMemberBinding="{Binding Port}" Width="15" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ShowAllServers" Content="Show All Servers"></Button>
    </StackPanel>
</UserControl>
